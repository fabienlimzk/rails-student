<h1>Interests#index</h1>
<p>Find me in app/views/interests/index.html.erb</p>

<div class="container">
  <%= link_to "Add Interest", new_interest_path, class: "btn btn-secondary" %>
  <table class="table mt-4">
    <tr>
      <td>id</td>
      <td>name</td>
    </tr>
    <% @interests.each do |interest| %>
      <tr>
        <td><%= link_to interest.id, interest_path(interest) %></td>
        <td><%= interest.firstname %></td>
        <td>
          <%= link_to "Edit", edit_interest_path(interest), class: "btn btn-warning" %>

          <%= link_to "Delete", interest_path(interest), method: "DELETE", data:{ confirm: "Confirm?"}, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </table>
</div>