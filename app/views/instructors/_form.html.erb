<div class="container">
  <% if @instructor.errors.any? %>
      <%= pluralize(@instructor.errors.count, "error") %>
    <% @instructor.errors.full_messages.each do |message| %>
      <div class="alert alert-danger"> <%= message %> </div>
    <% end %>
  <% end %>
  <%= form_for @instructor do |f| %>
    <div class="form-row">
      <%= f.label :firstname, "First Name: " %>
      <%= f.text_field :firstname, class: "form-control" %>
    </div>
    <div class="form-row">
      <%= f.label :lastname, "Last Name: " %>
      <%= f.text_field :lastname, class: "form-control" %>
    </div>
    <div class="form-row">
      <%= f.label :gender, "Gender: " %>
      <%= f.text_field :gender, class: "form-control" %>
    </div>
    <div class="form-row">
      <%= f.label :email, "Email: " %>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-row mb-3">
      <%= f.label :age, "Age: " %>
      <%= f.text_field :age, class: "form-control" %>
    </div>
    <div class="form-row">
      <%= f.label :phonenumber, "Phone Number: " %>
      <%= f.text_field :phonenumber, class: "form-control" %>
    </div>
    
    <%= f.submit "Submit", class: "btn btn-primary"%>
  <% end %>
</div>