<h1>Courses#show</h1>
<p>Find me in app/views/courses/show.html.erb</p>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3><%= @course.name %></h3>
    </div>
    <div class="col-md-6">
      <%= link_to "Add Student", new_course_student_path(@course), class: "btn btn-secondary" %>
      <table class="table mt-4">
        <tr>
          <td>id</td>
          <td>firstname</td>
          <td>lastname</td>
          <td>gender</td>
          <td>email</td>
          <td>age</td>
          <td>phone number</td>
        </tr>
        <% @course.students.each do |student| %>
          <tr>
            <td><%= link_to student.id, student_path(student.id) %></td>
            <td><%= student.firstname %></td>
            <td><%= student.lastname %></td>
            <td><%= student.gender %></td>
            <td><%= student.email %></td>
            <td><%= student.age %></td>
            <td><%= student.phonenumber %></td>
            <td>
              <%= link_to "Edit", edit_course_student_path(@course, student), class: "btn btn-warning" %>

              <%= link_to "Delete", course_student_path(@course, student), method: "DELETE", data:{ confirm: "Confirm?"}, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>